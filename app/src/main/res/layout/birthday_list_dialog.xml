<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TV01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Birthday"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/md_grey_800"
            android:textAlignment="center"
            android:padding="5dp"
            android:background="@color/md_grey_200"/>

        <ListView
            android:id="@+id/TodayBirthdayListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:divider="@color/md_grey_200"
            tools:ignore="NestedScrolling">

        </ListView>

        <TextView
            android:id="@+id/TV02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday's of this Month"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/md_grey_800"
            android:textAlignment="center"
            android:padding="5dp"
            android:background="@color/md_grey_200"/>

        <TextView
            android:id="@+id/TV03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/md_grey_800"
            android:textAlignment="center"
            android:padding="5dp"
            android:background="@color/md_grey_200"/>

        <ListView
            android:id="@+id/MonthBirthdayListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:divider="@color/md_grey_200"
            tools:ignore="NestedScrolling">

        </ListView>

        <TextView
            android:id="@+id/TV04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Went away"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/md_grey_800"
            android:textAlignment="center"
            android:padding="5dp"
            android:background="@color/md_grey_200"/>

        <ListView
            android:id="@+id/WentAwayListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:divider="@color/md_grey_200"
            tools:ignore="NestedScrolling">

        </ListView>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_300"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cste10nstu.shhridoy.cste10nstu.SecondActivity"
    tools:showIn="@layout/activity_second">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_300"
        tools:ignore="UselessParent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <LinearLayout
                    android:id="@+id/LL1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/ImageViewSecond"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/ic_launcher"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/NameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Md. Sohel Rana"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="normal"
                            android:textColor="@color/md_grey_900" />
                        <TextView
                            android:id="@+id/IdTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="ASH1501001M"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="normal"
                            android:textColor="@color/md_grey_900"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/TV1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LL1"
                    android:text="Mobile"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/md_grey_500"/>

                <ListView
                    android:id="@+id/MobileListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TV1"
                    android:dividerHeight="2dp"
                    android:divider="@color/md_grey_300"
                    tools:ignore="NestedScrolling">
                </ListView>

                <TextView
                    android:id="@+id/TV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/MobileListView"
                    android:text="Email"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/md_grey_500"/>

                <ListView
                    android:id="@+id/EmailListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TV2"
                    android:dividerHeight="2dp"
                    android:divider="@color/md_grey_300"
                    tools:ignore="NestedScrolling">
                </ListView>

                <TextView
                    android:id="@+id/TV3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/EmailListView"
                    android:text="Social"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/md_grey_500"/>

                <ListView
                    android:id="@+id/SocialListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TV3"
                    android:dividerHeight="2dp"
                    android:divider="@color/md_grey_300"
                    tools:ignore="NestedScrolling">
                </ListView>

                <TextView
                    android:id="@+id/TV4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/SocialListView"
                    android:text="Info"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/md_grey_500"/>

                <LinearLayout
                    android:id="@+id/BirthDateLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/TV4">

                    <TextView
                        android:id="@+id/TVBirthDateTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Date of birth: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_800"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/TVBirthDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="01/01/1995"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="normal"
                        android:textColor="@color/md_grey_900"
                        android:padding="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/HomeTownLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/BirthDateLL">

                    <TextView
                        android:id="@+id/TVHomeTownTItle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Home city: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_800"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/TVHomeTown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Lakshmipur"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="normal"
                        android:textColor="@color/md_grey_900"
                        android:padding="10dp"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </ScrollView>

</RelativeLayout>

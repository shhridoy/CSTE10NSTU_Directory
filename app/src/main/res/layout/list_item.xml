<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_grey_200">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/RLItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/imageTV"
                    android:layout_toRightOf="@+id/imageTV"
                    android:padding="2dp"
                    android:text="Heading"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_800" />

                <TextView
                    android:id="@+id/idTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="2dp"
                    android:text="Description"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/md_grey_800"
                    android:layout_below="@+id/nameTV"
                    android:layout_toEndOf="@+id/imageTV"
                    android:layout_toRightOf="@id/imageTV"
                    android:layout_alignLeft="@+id/nameTV"
                    android:layout_alignStart="@+id/nameTV" />

                <TextView
                    android:id="@+id/mobileTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="2dp"
                    android:text="Description"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/md_grey_800"
                    android:layout_below="@+id/idTv"
                    android:layout_toEndOf="@+id/imageTV"
                    android:layout_toRightOf="@id/imageTV"
                    android:layout_alignLeft="@+id/nameTV"
                    android:layout_alignStart="@+id/nameTV" />


                <ImageView
                    android:id="@+id/imageTV"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="Images" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/callButton"
                android:src="@android:drawable/ic_menu_call"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="Image Call" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>